<h1>Register a New User</h1>
<%= form_with model: @user, local: true do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <br>
  <%= f.label :email%>:
  <%= f.text_field :email %>
  <br>
  <%= f.label :password%>:
  <%= f.text_field :password %>
  <br>
  <%= f.label :confirm_password%>:
  <%= f.text_field :confirm_password %>
  <br>
  <%= f.button 'Create New User' %>
<% end %>
